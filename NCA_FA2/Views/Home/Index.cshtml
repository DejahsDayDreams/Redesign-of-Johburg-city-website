@model NCA_FA2.Models.FeedbackViewModel
@{
    ViewData["Title"] = "Home Page";
    

}

<html>

<head>
    <link href="~/css/website.css" rel="stylesheet" media="screen" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="home_img ">
    <div class="container">
        <div class="text-center">
            <br /><br /><br /><br /><br /><br /><br />
            <h1 class="Heading">City of Johannesburg</h1>
            <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        </div>
    </div>
    <div class="Home_container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="Heading_feedback">Do you have any feedback for us?</h2>
                </div>
        </div>
        <div class="row">

            <!-- Complaint Form -->
            <div class="col-md-5 complaint-form">
                <form asp-action="SubmitComplaint" method="post">
                    <h3>Complaint Form</h3>
                    <div class="form-group">
                        <input asp-for="Complaint_Name" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="form-group">
                        <input asp-for="Complaint_Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <input asp-for="Complaint_Phone" class="form-control" placeholder="Phone" required />
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Complaint_Text" class="form-control" placeholder="Complaint" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Complaint</button>
                    </div>
                </form>
            </div>

            <div class="col-md-2"></div>

            <!-- Compliment Form -->
            <div class="col-md-5 compliment-form">
                <form asp-action="SubmitCompliment" method="post">
                    <h3>Compliment Form</h3>
                    <div class="form-group">
                        <input asp-for="Compliment_Name" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="form-group">
                        <input asp-for="Compliment_Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <input asp-for="Compliment_Phone" class="form-control" placeholder="Phone" required />
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Compliment_Text" class="form-control" placeholder="Compliment" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Compliment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>